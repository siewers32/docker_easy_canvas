{% extends "page.njk" %}

{% block layout %}
<div class="deltionv2-center-template">
    <div class="deltionv2-template-container">
        <section class="deltionv2-addbanner">
            <div class="deltionv2-addcontent">
                <div class="deltionv2-addcontent-header">
                    <h2>{{ course_title }}</h2>
                </div>
                <div class="deltionv2-addcontent-header">
                    {% for p in collections[tags] | postsAscending %}
                        <a href="{{ p.url }}" {% if p.url==page.url %}aria-current="page" data-state="active" {% endif %}>{{ p.data.title }}</a>
                    {% endfor %}
                </div>
            </div>
        </section>
         <div class="deltionv2-content-section">
            <section class="deltionv2-textarea">
                {# Aangepaste css ivm color-coding van code-blocks #}
                <div style="display: flex; flex-direction: column; box-sizing: border-box; padding:2rem 2.5rem; background:#fff; width:65%;">
                {# Einde aanpassing #}
                    {{ content | safe}}
                    
                </div>
            </section>
        </div>
    </div>
</div>

{% endblock %}